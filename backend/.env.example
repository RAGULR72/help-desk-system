# Proserve Help Desk - Environment Configuration Example

# SECURITY CONFIGURATION
# Generate secure random keys for production!
# You can use: openssl rand -base64 32
SECRET_KEY=yoursecretkeyhere
REFRESH_SECRET_KEY=yourrefreshsecretkeyhere
PASS_PEPPER=yourpasswordpepperhere
ENCRYPTION_KEY=yourdatalkeyhere

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Policy
MIN_PASSWORD_LENGTH=12
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_DIGIT=true
REQUIRE_SPECIAL=true

# Rate Limiting & Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW=300
MAX_FAILED_ATTEMPTS=5
IP_BLOCK_DURATION=3600

# Admin Security
ADMIN_IP_RESTRICT=false
ADMIN_WHITELIST=127.0.0.1

# HSTS (only enable with HTTPS in production)
ENABLE_HSTS=false

# CORS Configuration
ENVIRONMENT=production
ALLOWED_ORIGINS=https://your-frontend-domain.com

# DATABASE CONFIGURATION
# Local PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# EMAIL CONFIGURATION
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# WHATSAPP NOTIFICATIONS
WHATSAPP_PROVIDER=mock # mock, ultramsg, green_api
WHATSAPP_API_KEY=
WHATSAPP_INSTANCE_ID=

# GOOGLE MAPS CONFIGURATION
GOOGLE_MAPS_API_KEY=

# GEMINI AI CONFIGURATION
GEMINI_API_KEY=
